@page
@using RazorRestaurant.Core
@model RazorRestaurant.Pages.Restaurants.List

@{
}

<h1>Restaurants</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm" autofocus />
            <span class="input-group-append">
                <button class="btn btn-primary">
                    Search
                </button>
            </span>
        </div>
    </div>
</form>

<table class="table">
    @foreach(var restaurant in Model.Restaurants)
    {
        <tr>
            <td>@restaurant.Name</td>
            <td>@restaurant.Location</td>
            <td>@restaurant.Cuisine</td>
            <td>
                <a class="btn btn-info" asp-page="./Detail" asp-route-restaurantId="@restaurant.Id">
                    Details
                </a>
                <a class="btn btn-info" asp-page="./Edit" asp-route-restaurantId="@restaurant.Id">
                    Edit
                </a>
                <a class="btn btn-info" asp-page="./Delete" asp-route-restaurantId="@restaurant.Id">
                    Delete
                </a>
            </td>
        </tr>
    }
</table>

@if (Model.Message != null)
{
    <div class="alert alert-info">@Model.Message</div>
}

<a asp-page="./Edit" class="btn btn-primary">Add New</a>
